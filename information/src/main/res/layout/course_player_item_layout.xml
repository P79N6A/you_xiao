<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="vertical">


    <TextView
        android:id="@+id/course_remind_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:text="2018/05/30 10:00"
        android:textColor="#999999"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/background_edittext"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/course_remind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上课提醒"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/course_remind_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="尊敬的用户您好，您今天上午的小提琴课程在布米童艺恒大校区上课，不要旷课哦。"
            android:textColor="#666666"
            android:textSize="18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_marginTop="20dp"
            android:background="#e9edf4" />

        <TextView
            android:id="@+id/reminder_go_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="去课程表"
            android:textColor="#25adf8"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>