<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="vertical">


    <TextView
        android:id="@+id/system_message_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:text="2018/05/30 10:00"
        android:textColor="#999999"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/background_edittext"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/system_message_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款成功"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/system_msg_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="支付金额:  0.0元"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/system_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="交易时间:  2018-05-30 10:00"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/system_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="交易方式:  支付宝余额"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/system_pay_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="交易详情:  小提琴初级限时免费课程"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/system_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="交易单号:  461661616156461165156461"
            android:textColor="#666666"
            android:textSize="18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_marginTop="20dp"
            android:background="#e9edf4" />

        <TextView
            android:id="@+id/system_go_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="查看该课程"
            android:textColor="#25adf8"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>