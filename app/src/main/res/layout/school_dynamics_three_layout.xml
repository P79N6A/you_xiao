<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="20dp"
        android:background="#ededed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/school_three_tile"
            style="@style/TextView_18sp_title"
            android:text="这些教育雷区90%家长都踩到了" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/school_three_img1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/topics_4" />

            <View
                android:layout_width="5dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/school_three_img2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/topics_5" />

            <View
                android:layout_width="5dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/school_three_img3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/topics_6" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>