<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ededed"
        android:padding="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <com.runtoinfo.youxiao.globalTools.views.RoundImagView
            android:id="@+id/school_second_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/schoole_lineralayout"
            android:layout_alignTop="@+id/schoole_lineralayout"
            android:scaleType="fitXY"
            android:src="@drawable/default_image"
            app:type="round" />

        <LinearLayout
            android:id="@+id/schoole_lineralayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/school_second_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/school_second_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红黄蓝幼儿园事件真相"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/school_second_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="受害者家属透露，孩子在午睡时哭闹"
                android:textColor="#999999"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/school_second_reader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:drawableLeft="@drawable/topics_img_reade"
                android:drawablePadding="2dp"
                android:text="1000+"
                android:textColor="#999999"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>