<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/boutique_inchild_layout_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/in_child_recycler_imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/boutique_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:text="闻鸡起舞"
            android:paddingStart="10dp"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/boutique_recycler_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="#999999"
            android:text="2010年11月20"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/boutique_recycler_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#ff4400"
                android:textSize="16sp"
                android:text="100元"/>

            <TextView
                android:id="@+id/boutique_recycler_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:textSize="15sp"
                android:text="100人购买"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>